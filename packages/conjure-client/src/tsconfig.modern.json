{
    "compilerOptions": {
      "declaration": true,
      "experimentalDecorators": true,
      "jsx": "react",
      "lib": [
        "dom",
        "esnext"
      ],
      "module": "esnext",
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "pretty": true,
      "removeComments": false,
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,
      "stripInternal": true,
      "target": "ESNext",
      "outDir": "../lib-modern"
    },
    "exclude": [
      "**/__integTest__/*"
    ]
  }
  