{
  "defaultSeverity": "error",
  "extends": [
    "@blueprintjs/tslint-config"
  ],
  "rules": {
    "file-header": [true,
      "Copyright \\d{4} Palantir Technologies, Inc."
    ],
    "no-submodule-imports": {
        "options": ["web-streams-polyfill/ponyfill"]
    },
    "object-literal-sort-keys": false
  },
  "linterOptions": {
    "exclude": ["src/generated/*"]
  }
}
